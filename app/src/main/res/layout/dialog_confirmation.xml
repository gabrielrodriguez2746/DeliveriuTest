<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <grodriguez.com.deliveriutest.widget.CustomTextView
        android:id="@+id/title"
        style="@style/TitleCapsFont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@drawable/action_bar"
        android:gravity="center"
        android:text="@string/confirmation_title"
        android:textColor="@color/white" />

    <grodriguez.com.deliveriutest.widget.CustomTextView
        android:id="@+id/message"
        style="@style/TitleBookFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="@dimen/confirmation_message_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <grodriguez.com.deliveriutest.widget.CustomButton
            android:id="@+id/no"

            style="@style/TitleDemiFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:text="@android:string/no" />

        <grodriguez.com.deliveriutest.widget.CustomButton
            android:id="@+id/yes"
            style="@style/TitleDemiFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:text="@android:string/yes" />
    </LinearLayout>

</LinearLayout>