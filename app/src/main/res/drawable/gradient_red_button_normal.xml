<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_black" />
            <corners android:radius="@dimen/button_shadow_radius" />
        </shape>
    </item>
    <item android:bottom="@dimen/button_shadow_height">
        <shape>
            <corners android:radius="@dimen/button_corner_radius" />
            <gradient
                android:endColor="@color/red_button_end"
                android:startColor="@color/red_button_start" />
        </shape>
    </item>
</layer-list>